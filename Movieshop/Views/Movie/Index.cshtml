﻿@model IEnumerable<MovieShopProxy.Models.Movie>
@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PictureURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrailerURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlotDescription)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PictureURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrailerURL)
            </td>
            <td>
                @foreach (var genre in item.Genres) { @Html.DisplayFor(modelItem => genre.Name)}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlotDescription)
            </td>

            <td>
                @Html.ActionLink("Update", "Update", new { movieId = item.Id }) |
                @Html.ActionLink("Details", "Details", new { movieId = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { movieId = item.Id })
            </td>
        </tr>
    }
</table>
