@model MovieShopProxy.DomainModel.Customer

@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

<form method="post" action="~/Customer/Update" class="col-md-12">
    <input type="hidden" class="form-control" name="Id" value="@Model.Id" hidden>
    <input type="text" class="form-control" name="Name" value="@Model.Name">
    <input type="email" class="form-control" name="Email" value="@Model.Email">
    <button type="submit" class="btn btn-default"> Update</button>
</form>


